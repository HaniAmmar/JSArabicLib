{
    "env": {
        "browser": true,
        "es5": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "script"
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-cond-assign": [
            "error",
            "always"
        ],
        "prefer-const": [
            "error",
            {
                "destructuring": "any",
                "ignoreReadBeforeAssign": false
            }
        ],
        "no-use-before-define": [
            "error",
            {
                "functions": true,
                "classes": true
            }
        ],
        "no-console": 2,
        "no-debugger": 2,
        "no-var": 1,
        "no-trailing-spaces": 1,
        "eol-last": 1,
        "no-underscore-dangle": 1,
        "no-alert": 1,
        "no-else-return": 1,
        "no-continue": 1
    },
    "globals": {
        "Atomics": false,
        "SharedArrayBuffer": false
    }
}
